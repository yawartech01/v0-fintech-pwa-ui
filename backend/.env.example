# Server Configuration
NODE_ENV=production
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=veltox_db
DB_USER=veltox_user
DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_min_32_characters_long
JWT_EXPIRES_IN=7d
JWT_ADMIN_SECRET=your_admin_jwt_secret_here_min_32_characters

# Admin Configuration
ADMIN_PASSWORD=change_this_secure_password

# TronGrid API (for TRC20 USDT)
TRON_API_KEY=your_trongrid_api_key_here
TRON_FULL_NODE=https://api.trongrid.io
TRON_COMPANY_WALLET=your_company_trc20_wallet_address
TRON_COMPANY_PRIVATE_KEY=your_company_wallet_private_key

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
